<ol class="post-list">
    {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
        <a href="{{title}}" target="_blank">{{title}}</a>
        <span>({{title}})</span>
      </div>
      <div class="meta">
        {{user.username}} created on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
    {{/each}}
</ol>